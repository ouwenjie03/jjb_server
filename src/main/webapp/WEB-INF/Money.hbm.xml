<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.jjb.bean">
	<class name="Money" table="Money">
		<!-- 定义id -->
		<id name="userId" column="userId" type="integer" />
		<!-- 定义已使用金额 -->
		<property name="usedMoney" column="usedMoney" type="double" />
		<!-- 定义总可用金额 -->
		<property name="totalMoney" column="totalMoney" type="double" />
	</class>
</hibernate-mapping>